<h1>Show Project</h1>

<h2>Project Details:</h2>

<p> Title : <%= @project.title %> </p>
<p> Description : <%= @project.description %> </p>
<p> Goal :  <%= @project.goal %> </p>
<p> Start : <%= @project.start_date %> </p>
<p> End :  <%= @project.deadline %> </p>
<p> Rewards : <% @project.rewards.each do |reward| %> </p>
	<%=	reward.description %>
	<% end %>
<%= link_to "Edit", edit_project_path(@project)%>
<%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure you want to delete this project?"} %>




<%= form_tag project_pledges_path(@project) do %>
 <div class="field">
  <%= label_tag :amount %><br />
  <%= text_field_tag :amount %>
</div>

<div class="actions">
  <%= submit_tag "Pledge" %>
</div>

<% end %>

