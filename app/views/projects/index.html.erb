
<h1 class="tagline">Make your dream happen.</h1>

<div class="button_container">
<button class="main_button"><%= link_to "Start Today", new_project_path %></button>
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel">


  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag("filmmaker.jpeg") %>
      <div class="carousel-caption">
      	<h3>Film</h3>
      </div>
    </div>

    <div class="item">
        <%= image_tag("games.jpeg") %>
        <div class="carousel-caption">
        	<h3>Games</h3>
        </div>
    </div>

    <div class="item">
      <%= image_tag("recording.jpeg") %>
      <div class="carousel-caption">
        <h3>Music</h3>
      </div>
    </div>

    <div class="item">
      <%= image_tag("vr.jpeg") %>
      <div class="carousel-caption">
      	<h3>New Technologies</h3>
      </div>

    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  <div class="row">

    <div id="main-content" class="col-xs-6">
      <h1>Completed Projects</h1>
      <div class="jumbotron">
        <h1>Project</h1>
        <% recently_completed_projects = @projects.order(deadline: :asc) %>
        <% recently_completed_projects.each do |project| %>
          <p class="project-name"><strong><%= project.title %> : </strong></p>
          <br><strong><%= project.goal %></strong>
          <br><em><%= project.description %></em>
        <% end %>
      </div>
    </div>
    <div id="main-content" class="col-xs-6">
      <h1>Recent Projects</h1>
      <div class="jumbotron">
        <h1>Project</h1>
        <% recently_created_projects = @projects.order(created_at: :asc) %>
        <% @projects.each do |project| %>
          <p class="project-name"><strong><%= project.title %> : </strong></p>
          <br><strong><%= project.goal %></strong>
          <br><em><%= project.description %></em>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">

    <div id="main-content" class="col-xs-12">
      <h1>Upcoming Projects</h1>
      <div class="jumbotron">
        <h1>Project</h1>
        <% upcoming_projects = @projects.order(start_date: :asc) %>
        <% upcoming_projects.each do |project| %>
          <p class="project-name"><strong><%= project.title %> : </strong></p>
          <br><strong><%= project.goal %></strong>
          <br><em><%= project.description %></em>
          <br><em><% project.rewards.each do |reward| %>
            <%= reward.description %></em>
          <% end %>
          <br> <%= link_to "View", project_path(project) %>
        <% end %>
      </div>
    </div>
  </div>
