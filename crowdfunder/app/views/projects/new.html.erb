<h1>New Project</h1>

<%= form_for @project do |f| %>
  <div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <%= f.label :goal %>
  <%= f.number_field :goal %>
  </div>

  <div class="field">
  <%= f.label :description %>
  <%= f.text_field :description %>
  </div>

  <div class="field">
  <%= f.label :deadline %>
  <%= f.datetime_select :deadline %>
  </div>

  <%= f.submit %>


<% end %>
